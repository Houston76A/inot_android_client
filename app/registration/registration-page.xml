<Page loaded="pageLoaded" class="page page-light" navigatingTo="onNavigatingTo">

	<ActionBar title="Страница регистрации" class="action-bar">
	</ActionBar>
	<ScrollView>
	   <StackLayout> 
			<StackLayout class="home-panel">
				<TextField id="login-text-field" hint="Login" class="input input-border input-login" text="{{ login }}"/>
				<TextField id="firstname-text-field" hint="First Name" class="input input-border input-firstname" text="{{ firstname }}"/>
				<TextField id="lastname-text-field" hint="Last Name" class="input input-border input-lastname" text="{{ lastname }}"/>
				<TextField id="email-text-field" hint="Email" class="input input-border input-email" text="{{ email }}"/>
				<TextField id="password-text-field" hint="Password" secure="true" class="input input-border input-password" text="{{ password }}"/>
				<TextField id="confpassword-text-field" hint="Confirm password" secure="true" class="input input-border input-confirmpassword" text="{{ confpassword }}"/>
			</StackLayout>
				<StackLayout>
					<Button class="btn btn-primary" text="Зарегестироваться" tap="onNavigate" />
				</StackLayout>
       </StackLayout> 
	</ScrollView>
</Page>