<Page loaded="pageLoaded"  navigatingTo="onNavigatingTo">

    <ActionBar title="Inot" class="action-bar">
    </ActionBar>
    <ScrollView>
        <StackLayout class="home-panel">
			<Label class="text-center black"
				text="Добро пожаловать в наше приложение Inot!" textWrap="true"/>
            <Image src="~/images/logo.png" width="100%" class="logo" />
			<TextField id="username-text-field"  hint="Email or Phone" class="input input-border input-login" text="{{ username }}"/>
			<TextField id="password-text-field" hint="Password" secure="true" class="input input-border input-password" text="{{password}}"/>
			<Button text="Вход" class="btn btn-primary" tap="onTap"/>
            <Button text="Регистрация" class="btn btn-primary" tap="onNavigate" />
		</StackLayout>  
    </ScrollView>
</Page>